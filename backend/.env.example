# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_URL=postgresql://postgres.your-project:your-password@aws-0-region.pooler.supabase.com:6543/postgres

# Google AI (Gemini - for embeddings and LLM)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# OpenAI (optional)
OPENAI_API_KEY=

# Security
CLIENT_API_KEYS=dev_client_key,test_key
ADMIN_API_KEY=dev_admin_key

# CORS
CORS_ORIGINS=http://localhost:3300,http://localhost:3000,http://localhost:5173

# Server
PORT=4000
NODE_ENV=development

# Feature Flags
ENABLE_VERTICAL_PACKS=false

# Tools
TOOLS_BASE_URL=

# Catalog Sync
CATALOG_SYNC_API_KEYS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Chat Limits
CHAT_MAX_MESSAGES=40
CHAT_MAX_MESSAGE_LENGTH=2000
CHAT_MAX_TOTAL_CHARS=8000
CHAT_SESSION_ID_MAX_LENGTH=128
